<!-- Intro Header white-->
<header class="intro">
	<div class="intro-body">
		<div class="container">
			<div class="row">
				<div class="col-md-8 col-md-offset-2">
					<h1 class="brand-heading">Be Local</h1>
					<p class="intro-text">Experience travelling locally<br>
					<% if visitor_signed_in? %>
						<%# link_to "New program", new_program_path%>
						<%= link_to "sign out",  destroy_visitor_session_path, method: :delete%>
					<%else%>
						<%=link_to "Start travelling local", new_visitor_registration_path%>/
						<%= link_to "Sign in traveller", new_visitor_session_path%>
					<%end%>
					</p>
					<a href="#about" class="btn btn-circle page-scroll">
						<i class="fa fa-angle-double-down animated"></i>
					</a>
				</div>
			</div>
		</div>
	</div>
</header>
<!-- Guide = about Section black-->
<section id="about" class="container content-section text-center">
	<div class="row">
		<div class="col-lg-8 col-lg-offset-2">
			<h2>Latest guides</h2>
			<p>If you beleive you are knowledgable enough to guide travellers for them to experience loccally you too become a guide !</p>
			<p><%= link_to "Become a guide !", new_guide_registration_path%>
			</p>
			<ul class="row">
			<%@guides.each do |g|%>
				<li class="col-xs-4">
					<%=link_to "profile/#{g.id}", class: "btn btn-default btn-lg" do %>
						<i class="fa fa-twitter fa-fw"></i><%= g.email%>
					<%end%>
				</li>
			<%end%>	
			</ul>
		</div>
	</div>
</section>
<!-- Programs Section white-->
<section id="program" class="content-section text-center">
	<div class="download-section">
		<div class="container">
			<div class="col-lg-8 col-lg-offset-2">
			<h2>Latest local programs</h2>
			<p>You can book a program of a local guide by signing-in as a traveller.</p>
			<ul class="row">
			<%@programs.each do |p|%>
				<li class="col-xs-4">
					<%=link_to p, class: "btn btn-default btn-lg" do%>
						<i class="fa fa-twitter fa-fw"></i><%= p.name%>
					<%end%>
				</li>
			<%end%>
			</ul>
			</div>
		</div>
	</div>
</section>


